package Repaso;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class RepasoViernes {

	public static void main(String[] args) throws IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		

		System.out.println("¿Podrías escribir el nombre de tu película Favorita?");
	String pelicula = br.readLine();
	
		System.out.println("Esta película es para mayores de edad? S/N");
	
	char mayorEdad = br.readLine().charAt(0);
	
		System.out.println("¿Cuántos años tienes?");
	String edad = br.readLine();
	
		if (mayorEdad < 18) {
			System.out.println("No puedes ver esta pelicula.");
		} else {
			System.out.println("Puedes ver " + pelicula + " disfrutala.");
		}

	}

}
